{
  "name": "chaosobs",
  "description": "An app to display modals in the OBS window based on youtube live chat",
  "version": "1.1.0",
  "main": "main.js",
  "author": "Zacky VT",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "start": ".\\node_modules\\node\\bin\\node.exe start-electron.js",
    "build64": "electron-packager . --overwrite --icon=resources/icon.ico --platform=win32 --arch=x64 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ChaosOBS\" --asar",
    "build32": "electron-packager . --overwrite --icon=resources/icon.ico --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ChaosOBS\" --asar"
  },
  "dependencies": {
    "electron": "11.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "node": "^15.4.0",
    "request": "^2.88.2",
    "strip": "^3.0.0"
  },
  "devDependencies": {
    "electron-packager": "^15.2.0",
    "electron-winstaller": "^5.0.0",
    "electron-wix-msi": "^3.2.0"
  }
}
